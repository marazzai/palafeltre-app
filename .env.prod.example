# Palafeltre App - Production Environment Template
# Copy these variables to Portainer environment configuration
# CHANGE ALL DEFAULT VALUES FOR SECURITY!

# Database Configuration
DATABASE_URL=postgresql+psycopg2://palafeltre:CHANGE_DB_PASSWORD@db:5432/palafeltre
POSTGRES_DB=palafeltre
POSTGRES_USER=palafeltre
POSTGRES_PASSWORD=CHANGE_DB_PASSWORD_SECURE

# Security Configuration - MUST CHANGE FOR PRODUCTION!
JWT_SECRET=CHANGE_TO_SECURE_RANDOM_STRING_64_CHARS_MIN
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=30

# Admin User Configuration - CHANGE DEFAULT PASSWORD!
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_ADMIN_PASSWORD_SECURE
FORCE_RESET_ADMIN_PASSWORD=false

# OBS WebSocket Configuration
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=obs_secure_password

# CORS Configuration - ADD YOUR PRODUCTION DOMAINS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://nas.local:8080
CORS_ORIGIN_REGEX=https://yourdomain\.com|http://nas\.local:8080

# Storage Configuration
STORAGE_PATH=/app/storage

# Logging Configuration
LOG_LEVEL=INFO
JSON_LOGS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Application Configuration
DEBUG=false

# Frontend Configuration
VITE_API_BASE_URL=/api
