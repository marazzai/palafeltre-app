# Palafeltre App - Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
DATABASE_URL=postgresql+psycopg2://palafeltre:palafeltre@db:5432/palafeltre
POSTGRES_DB=palafeltre
POSTGRES_USER=palafeltre
POSTGRES_PASSWORD=palafeltre_secure_password_change_me

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=30

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@palafeltre.local
ADMIN_PASSWORD=secure_admin_password_change_me
FORCE_RESET_ADMIN_PASSWORD=false

# OBS WebSocket Configuration
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=obs_websocket_password

# CORS Configuration (add your domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ORIGIN_REGEX=https?://(localhost|127\.0\.0\.1|0\.0\.0\.0)(:\d+)?|https?://192\.168\.[0-9]+\.[0-9]+(:\d+)?

# Storage Configuration
STORAGE_PATH=/app/storage

# Logging Configuration
LOG_LEVEL=INFO
JSON_LOGS=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Application Configuration
DEBUG=false